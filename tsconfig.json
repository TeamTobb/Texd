{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "watch": true
    },
    "filesGlob": [
        "./server.ts",
        "./server/**/*.ts",
        "./server/**/*.tsx",
        "!node_modules/**",
        "!public/**/*.ts",
        "!public/**/*.tsx",
        "!typings/**/*.ts",
        "!typings/**/*.tsx"
    ],
    "compileOnSave": true,
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "./server.ts",
        "./server/dao/documentModel.ts",
        "./server/dao/userModel.ts",
        "./server/domain/chapter.ts",
        "./server/domain/document.ts",
        "./server/domain/line.ts",
        "./server/resources/document.ts",
        "./server/resources/index.ts",
        "./server/resources/login.ts",
        "./server/resources/plugins.ts",
        "./server/resources/snippets.ts",
        "./server/resources/upload.ts",
        "./server/services/documentService.ts"
    ]
}
